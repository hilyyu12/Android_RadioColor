<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    tools:context="id.sch.hilyyu26smktelkom.radiocolor.MainActivity">


    <RadioGroup
        android:id="@+id/RadioGroup01"
        android:layout_width="124dp"
        android:layout_height="301dp"

        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.86"
        android:gravity="center_vertical"

        android:orientation="vertical"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="49dp">

        <RadioButton
            android:id="@+id/rdb8"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/RadioGroup01"
            android:layout_below="@+id/textView"
            android:checked="false"

            android:text="Cayon"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="85dp" />

        <RadioButton
            android:id="@+id/rdb5"
            android:layout_width="92dp"
            android:layout_height="38dp"
            android:layout_alignStart="@+id/RadioGroup01"

            android:layout_below="@+id/rdb4"
            android:checked="false"
            android:text="Yellow"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="307dp" />

        <RadioButton

            android:id="@+id/rdb6"
            android:layout_width="72dp"
            android:layout_height="33dp"
            android:layout_above="@+id/rdb7"
            android:layout_alignStart="@+id/rdb7"

            android:checked="false"
            android:text="Dark"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="407dp" />

        <RadioButton
            android:id="@+id/rdb7"
            android:layout_width="84dp"
            android:layout_height="40dp"

            android:layout_above="@+id/rdb2"
            android:layout_alignStart="@+id/rdb2"
            android:checked="false"

            android:text="Pink"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="356dp" />

        <RadioButton
            android:id="@+id/rdb2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnexit"
            android:layout_centerVertical="true"
            android:text="Green"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="172dp"></RadioButton>

        <RadioButton

            android:id="@+id/rdb3"
            android:layout_width="71dp"
            android:layout_height="34dp"
            android:layout_alignStart="@+id/RadioGroup01"
            android:layout_below="@+id/RadioGroup01"
            android:text="Blue"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="264dp"></RadioButton>

        <RadioButton
            android:id="@+id/rdb4"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_alignEnd="@+id/textView"

            android:layout_below="@+id/textView"
            android:checked="false"
            android:text="White"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="125dp" />

        <RadioButton

            android:id="@+id/rdb1"
            android:layout_width="75dp"

            android:layout_height="35dp"
            android:layout_alignStart="@+id/rdb6"
            android:layout_below="@+id/rdb3"
            android:text="Red"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="218dp"></RadioButton>

    </RadioGroup>

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:background="#03feed"
        android:gravity="center"
        android:text="Pilih Warna"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="5dp" />

    <Button

        android:id="@+id/btnexit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/txtwarna"
        android:layout_alignParentBottom="true"

        android:text="Keluar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="457dp" />

    <TextView
        android:id="@+id/txtwarna"
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:layout_above="@+id/btnexit"

        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Warna yang dipilih"
        android:textSize="17dp"
        android:textStyle="bold"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="374dp" />

</RelativeLayout>


